<div class="col-md-6 col-sm-6">
    <div class="portlet light bordered">
        <div class="portlet-title tabbable-line">
            <div class="caption">
                <i class="icon-bubbles font-dark hide"></i>
                <span class="caption-subject font-dark bold uppercase">
                    <i class="fa fa-comments"></i>
                    Dernières réactions
                </span>
            </div>
            <ul class="nav nav-tabs">
                <li class="">
                    <a href="#portlet_comments_1" data-toggle="tab" aria-expanded="false"> En attente </a>
                </li>
                <li class="active">
                    <a href="#portlet_comments_2" data-toggle="tab" aria-expanded="true"> Acceptées </a>
                </li>
            </ul>
        </div>
        <div class="portlet-body">
            <div class="scroller" style="height: 300px;" data-always-visible="1" data-rail-visible="0">
                <div class="tab-content">
                    <div class="tab-pane" id="portlet_comments_1">
                        <!-- BEGIN: Comments -->
                        <div class="mt-comments">
                            {% for reaction in pending_reactions %}
                            <div class="mt-comment">
                                <div class="mt-comment-img">
                                    <img src="http://2.gravatar.com/avatar/?s=110&d=mm&r=g" class="avatar" width="50">
                                </div>
                                <div class="mt-comment-body">
                                    <div class="mt-comment-info">
                                        <span class="mt-comment-author">{{ reaction.name }}</span>
                                        <span class="mt-comment-date">{{ reaction.date|date('d/m/Y à H:i:s') }}</span>
                                    </div>
                                    <div class="mt-comment-text"> {{ reaction.reaction }} </div>
                                    <div class="mt-comment-details">
                                        <ul class="mt-comment-actions font-dark">
                                            {% if reaction.url != '' %}
                                            <li>
                                            <i class="fa fa-at"></i>
                                                {{ reaction.url }}
                                                /
                                            </li>
                                            {% endif %}
                                            <li><i class="fa fa-envelope-o"></i> {{ reaction.email }} /</li>
                                            <li><i class="fa fa-terminal"></i> {{ reaction.ip }} </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <!-- END: Comments -->
                    </div>
                    <div class="tab-pane active" id="portlet_comments_2">
                        <!-- BEGIN: Comments -->
                        <div class="mt-comments">
                            {% for reaction in accepted_reactions %}
                                <div class="mt-comment">
                                    <div class="mt-comment-img">
                                        <img src="http://2.gravatar.com/avatar/?s=110&d=mm&r=g" class="avatar" width="50">
                                    </div>
                                    <div class="mt-comment-body">
                                        <div class="mt-comment-info">
                                            <span class="mt-comment-author">{{ reaction.name }}</span>
                                            <span class="mt-comment-date">{{ reaction.date|date('d/m/Y à H:i:s') }}</span>
                                        </div>
                                        <div class="mt-comment-text"> {{ reaction.reaction }} </div>
                                        <div class="mt-comment-details">
                                            <ul class="mt-comment-actions font-dark">
                                                {% if reaction.url != '' %}
                                                    <li>
                                                        <i class="fa fa-at"></i>
                                                        {{ reaction.url }}
                                                        /
                                                    </li>
                                                {% endif %}
                                                <li><i class="fa fa-envelope-o"></i> {{ reaction.email }} /</li>
                                                <li><i class="fa fa-terminal"></i> {{ reaction.ip }} </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <!-- END: Comments -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>