        <h1 class="page-title">{{ categorie.name }}</h1>
        <p class="heading-intro">{{ categorie.description }}</p>
    </div>
{% endblock %}

{% block inner_body %}
    {% for courrier in courriers %}
        {{ render(controller('AppBundle:Courrier:apercu', {id: courrier.id})) }}
    {% endfor %}
{% endblock %}